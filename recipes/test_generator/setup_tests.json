{
  "steps": [
    {
      "type": "read_file",
      "path": "{{component_spec_path}}",
      "artifact": "component_spec"
    },
    {
      "type": "read_file",
      "path": "recipes/test_generator/includes/TESTING_BEST_PRACTICES.md",
      "artifact": "testing_best_practices"
    },
    {
      "type": "read_file",
      "path": "{{component_code_path}}",
      "artifact": "component_code",
      "optional": true
    },
    {
      "type": "execute_recipe",
      "recipe_path": "recipes/test_generator/generate_tests.json",
      "context_overrides": {
        "model": "{{model|default:'azure:o3-mini'}}",
        "output_root": "{{output_root|default:'output'}}",
        "output_path": "{{output_path|default:'.'}}",
        "language": "{{language|default:'javascript'}}",
        "testing_framework": "{{testing_framework|default:'jest'}}",
        "component_spec": "{{component_spec}}",
        "component_code": "{{component_code}}",
        "testing_best_practices": "{{testing_best_practices}}"
      }
    }
  ]
}